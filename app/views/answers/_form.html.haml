= form_for [@user, @answer] do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  / .field
  /   = f.label :tweet_id
  /   = f.number_field :tweet_id
  / .field
  /   = f.label :correct
  /   = f.check_box :correct
  .field
    = f.label :guess
    = f.text_field :guess
  .actions
    = f.submit 'Save'
