= form_for [@user, @answer] do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_area :guess
    = f.hidden_field :tweet_id, value: @tweet.id
  %button
    = f.submit 'Correct Tweet', :class => "submitButton"