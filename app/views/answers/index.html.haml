%h1 Listing answers

%p 
  Score:
  = @user.score
%table
  %tr
    %th User
    %th Tweet
    %th Guess
    %th Correct
    %th
    %th
    %th

  - @answers.each do |answer|
    %tr
      %td= answer.user_id
      %td= answer.tweet_id
      %td= answer.guess
      %td= answer.correct
      %td= link_to 'Show', user_answer_path(@user, answer)
      / %td= link_to 'Edit', edit_user_answer_path(@user, answer)
      %td= link_to 'Destroy', user_answer_path(@user, answer), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Play', new_user_answer_path(@user)
